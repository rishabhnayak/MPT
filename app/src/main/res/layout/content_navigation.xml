<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ml.rishabhnayak.mpt.NavigationActivity"
    tools:showIn="@layout/app_bar_navigation">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_margin="16dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <RelativeLayout
                android:id="@+id/review_card"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/review"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    android:text="Review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="16dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <RelativeLayout
                android:id="@+id/complaint_card"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/complaint"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    android:text="Complaint of Driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView

            android:layout_margin="16dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <RelativeLayout
                android:id="@+id/trackcomplaint_card"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:elevation="2dp"
                    android:src="@drawable/track"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    android:text="Track Your Complain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_margin="16dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="170dp">
            <RelativeLayout
                android:id="@+id/complainthistory_card"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/history"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    android:text="Complain History"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</LinearLayout>

    <ImageView
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:src="@drawable/back"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
</RelativeLayout>
