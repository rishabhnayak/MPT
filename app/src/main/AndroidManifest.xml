<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ml.rishabhnayak.mpt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:screenOrientation="portrait"
            android:name=".RegisterActivity"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".NavigationActivity"
            android:label="Feedback us"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:screenOrientation="portrait"
            android:name=".menucards.ReviewActivity"
            android:label="Submit Review" />
        <activity
            android:screenOrientation="portrait"
            android:name=".menucards.ComplintActivity"
            android:label="Submit Complaint" />
        <activity
            android:screenOrientation="portrait"
            android:name=".menucards.TrackComplaintActivity"
            android:label="Track Your Complaint" />
        <activity
            android:screenOrientation="portrait"
            android:name=".menucards.ComplaintHistoryActivity"
            android:label="Complaint History" />
        <activity
            android:screenOrientation="portrait"
            android:name=".activities.ActivityGps"
            android:label="Live Speed Track" />
        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".LoginActivity"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".TestActivity"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".QrScanner.QrScannerActivity"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>